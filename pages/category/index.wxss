page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates ._searchInput {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.cates .cates_container {
  overflow: hidden;
  position: fixed;
  top: 90rpx;
  bottom: 0;
  left: 0;
  right: 0;
}
.cates .cates_container .sidebar {
  float: left;
  overflow: auto;
  width: 30%;
  height: 100%;
}
.cates .right_content {
  float: left;
  overflow: auto;
  width: 70%;
  height: 100%;
}
.cates .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .right_content .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .right_content .goods_group .goods_list .goods_item {
  height: 200rpx;
}
.cates .right_content .goods_group .goods_list .goods_item .goods_image {
  width: 50%;
}
